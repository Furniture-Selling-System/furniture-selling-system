<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.furniture.controllers.create.CreateNewMaterialController">
    <children>
        <Label layoutX="452.0" layoutY="39.0" text="Create New Material">
            <font>
                <Font size="48.0" />
            </font>
        </Label>
        <Label layoutX="247.0" layoutY="160.0" text="Name">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="materialNameTextField" layoutX="388.0" layoutY="143.0" prefHeight="66.0" prefWidth="655.0" promptText="material name">
            <font>
                <Font size="30.0" />
            </font>
        </TextField>
        <Label layoutX="220.0" layoutY="280.0" text="Quantity">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="quantityTextField" alignment="CENTER_RIGHT" layoutX="388.0" layoutY="269.0" prefHeight="66.0" prefWidth="127.0">
            <font>
                <Font size="30.0" />
            </font>
        </TextField>
        <Label layoutX="716.0" layoutY="279.0" text="Minimum">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="minimumTextField" alignment="CENTER_RIGHT" layoutX="915.0" layoutY="269.0" prefHeight="66.0" prefWidth="127.0">
            <font>
                <Font size="30.0" />
            </font>
        </TextField>
        <Button fx:id="cancelBtn" layoutX="50.0" layoutY="655.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
            <font>
                <Font size="40.0" />
            </font>
        </Button>
        <Button fx:id="createBtn" layoutX="1150.0" layoutY="655.0" mnemonicParsing="false" onAction="#handleCreate" text="Create">
            <font>
                <Font size="40.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
